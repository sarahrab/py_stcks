{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "simple": {
      "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
    },
    "ecs": {
            "class": "ecs_logging.StdlibFormatter",
            "exclude_fields": ["log.original", "labels"]
        }
  },
  "handlers": {
    "stderr": {
      "class": "logging.StreamHandler",
      "formatter": "simple",
      "stream": "ext://sys.stderr",
      "level": "ERROR"
    },
    "file": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "DEBUG",
      "formatter": "ecs",
      "filename": "logs/stocks_1.log",
      "maxBytes": 10000,
      "backupCount": 3,
      "encoding": "utf8"
    }
  },

  "loggers": {
    "my_module": {
      "level": "DEBUG",
      "handlers": ["file"]
    },
    "error_log": {
      "level": "ERROR",
      "handlers": ["stderr", "file"]
    }
  }
}
